<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/relativelay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
	>
 	<RadioGroup
	    android:id="@+id/tab_menu"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
        android:gravity="center"
		android:background="@drawable/bgimg">
		<RadioButton
			android:id="@+id/home"
			style="@style/raido_tab"
			android:text="Home"
			android:visibility="invisible"
			/>
		<RadioButton
			android:id="@+id/connected"
			style="@style/raido_tab"
			android:text="Connected"
			android:visibility="invisible"
			/>
		<RadioButton
	        android:id="@+id/tab_login"
	        style="@style/raido_tab"
	        android:text="@string/str_longin"
			android:visibility="invisible"
			/>

	    <RadioButton
	        android:id="@+id/tab_numpad"
	        style="@style/raido_tab"
	        android:text="@string/str_numpad"
			android:visibility="invisible"/>

	    <RadioButton
	        android:id="@+id/tab_video"
	        style="@style/raido_tab"
	        android:text="@string/str_video"
			android:visibility="invisible"
            android:enabled="false"/>

	    <RadioButton
	        android:id="@+id/tab_message"
	        style="@style/raido_tab"
	        android:text="@string/str_message"
            android:visibility="invisible"
            android:enabled="false"/>
		
		<RadioButton
		    android:id="@+id/tab_setting"
		    style="@style/raido_tab"
		    android:text="@string/str_setting"
			android:visibility="invisible"
			/>
	
	</RadioGroup>
       <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu">
    </FrameLayout>

</RelativeLayout>