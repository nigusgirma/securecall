<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#146d12" />
            <stroke
                android:width="4dp"
                android:color="#00ffffff" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#33da35"
                android:endColor="#1da31a"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#7e37c9dd" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>