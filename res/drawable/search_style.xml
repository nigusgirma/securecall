<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_long_pressable="true"
        android:hint="">
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#0657f3f4" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true"
        android:hint="">
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#0657f3f4" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#a0ff9c" />
            <stroke
                android:width="1dp"
                android:color="#0657f3f4" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#df060923"
                android:endColor="#0f2a0d"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#7e37c9dd" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>